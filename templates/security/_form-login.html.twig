<div class="offset-2 col-8">
    <div class="row m-0">
        <h2 class="form-padding m-auto">Connexion</h2>
    </div>
    <form method="post" action="" >
        <div class="row">
            <div class="offset-2 col-8 form-group">
                <label for="email" class="text-purple">Email</label>
                <input type="email" class="form-control" id="email" placeholder="Votre adresse mail ..."
                       required>
            </div>
        </div>
        <div class="row">
            <div class="offset-2 col-8 form-group">
