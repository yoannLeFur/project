            <div class="offset-2 col-4 ">
                <button class="col-12 btn-sm bg-button-purple text-white border-0">Se connecter</button>
            </div>
            <div class="offset-0 col-4">
                <div class="col-12 text-center btn-sm bg-button-purple">
                    <a href="{{ path('register') }}" class=" text-white border-0" style="width:100%">Crée un
